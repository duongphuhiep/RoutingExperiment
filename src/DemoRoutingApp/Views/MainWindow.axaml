<Window x:Class="DemoRoutingApp.Views.MainWindow" xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:DemoRoutingApp" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:DemoRoutingApp.Views" xmlns:vm="using:DemoRoutingApp.ViewModels"
        Title="DemoRoutingApp" d:DesignHeight="450"
        d:DesignWidth="800" x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico" mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainWindowViewModelForDesigner />
    </Design.DataContext>
    <Grid RowDefinitions="auto,*">
        <local:AddressBar Grid.Row="0" />
        <ContentControl Grid.Row="1" Content="{Binding MainViewModel}" />
    </Grid>
</Window>
